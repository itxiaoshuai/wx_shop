/* 设置页面的布局为纵向排列 column */

page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.navbar {
  flex: none;
  display: flex;
  background: #fff;
}

/* 导航栏没有选中的样式 */

.navbar .item {
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  font-size: 14px;
}

/* 顶部导航字体颜色 */

.navbar .item.active {
  color: #f0145a;
}

/* 顶部指示条属性 */

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: #f0145a;
}

/* 直接设置swiper属性 */

swiper {
  height: 300rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

/*=================品牌馆、类目 的样式====================*/

.navs {
  display: flex;
}

.nav-item {
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx;
}

.nav-item .nav-image {
  width: 80rpx;
  height: 80rpx;
}

.nav-item text {
  padding-top: 20rpx;
  font-size: 25rpx;
}

